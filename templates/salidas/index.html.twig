{% extends 'base.html.twig' %}

{% block title %}Salidas index{% endblock %}

{% block body %}
    <h1>Salidas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salida in salidas %}
            <tr>
                <td>{{ salida.id }}</td>
                <td>{{ salida.quantity }}</td>
                <td>{{ salida.date ? salida.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_salidas_show', {'id': salida.id}) }}">show</a>
                    <a href="{{ path('app_salidas_edit', {'id': salida.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_salidas_new') }}">Create new</a>
{% endblock %}
