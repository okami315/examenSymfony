{% extends 'base.html.twig' %}

{% block title %}Entradas index{% endblock %}

{% block body %}
    <h1>Entradas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entrada in entradas %}
            <tr>
                <td>{{ entrada.id }}</td>
                <td>{{ entrada.quantity }}</td>
                <td>{{ entrada.date ? entrada.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_entradas_show', {'id': entrada.id}) }}">show</a>
                    <a href="{{ path('app_entradas_edit', {'id': entrada.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entradas_new') }}">Create new</a>
{% endblock %}
